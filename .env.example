# Solana Wallet Configuration
PRIVATE_KEY=your_private_key_here
RPC_URL=https://api.mainnet-beta.solana.com

# gRPC Configuration (Optional, for real-time launch monitoring)
GRPC_ENDPOINT=your_grpc_endpoint
GRPCTOKEN=your_grpc_token

# Trading Parameters
SNIPERAMOUNT=0.1
PROFIT_TARGET=2.0
STOP_LOSS=0.5
MAX_HOLD_TIME=300000
MIN_LIQUIDITY=10
MAX_POSITIONS=5
MIN_TX_AGE=1

# Pool Filters (true/false)
ENABLE_PUMPFUN=true
ENABLE_PUMPSWAP=true
ENABLE_RAYDIUM_LAUNCHLAB=true
ENABLE_RAYDIUM_CPMM=true

# Swap Configuration
# SWAP_METHOD: "solana", "nozomi", "race", "0slot"
SWAP_METHOD=solana
SLIPPAGE_BPS=5000
PRIORITY_FEE=1000

# Nozomi/Jito Specifics
NOZOMI_URL=
NOZOMI_UUID=
NOZOMI_TIP_LAMPORTS=200000
JITO_TIP=100000

# Risk Management
MAX_DAILY_LOSS=1.0
MAX_SINGLE_LOSS=0.5
TRADE_COOLDOWN=5000

# Dashboard Configuration
ENABLE_DASHBOARD=true
PORT=3000

# AI Analysis (Optional)
OPENAI_API_KEY=your_openai_api_key

# Copy Trading
ENABLE_COPY_TRADING=false
MAX_COPY_POSITIONS=3
COPY_AMOUNT=0.05
TRACKED_WALLETS=address1,address2

# Logging
LOG_LEVEL=info
DEBUG=false
